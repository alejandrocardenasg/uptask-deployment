doctype html
html(lang="en")
    head
        include ./partials/header
    body.login 

        .contenedor-formulario 
            h1= nombrePagina 

            if(locals.mensajes)
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error

            p Agrega tu E-mail para reestablecer la contraseña
            form.caja-login(method="POST", action="/reestablecer")
                .campo 
                    label(for="email") E-mail 
                    input(type="email" name="email" placeholder="Tu E-mail" value=`${email ? email : ''}` required) 
                .campo.enviar
                    input.boton(type="submit" value="Reestablecer contraseña")
                .campo.acciones 
                    a(href="/iniciar-sesion") Iniciar sesión